<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
  <bean id="BookTypeMaintenanceDocument-workflowProperties-parentBean" abstract="true" parent="WorkflowProperties">
    <property name="workflowPropertyGroups">
      <list>
        <bean parent="WorkflowPropertyGroup">
          <property name="workflowProperties">
            <list>
              <bean parent="WorkflowProperty" p:path="oldMaintainableObject.businessObject"/>
              <bean parent="WorkflowProperty" p:path="newMaintainableObject.businessObject"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <bean id="BookType-MaintenanceView" parent="MaintenanceView">
    <property name="dataObjectClassName" value="edu.sampleu.bookstore.bo.BookType"/>
    <property name="items">
      <list merge="true">
        <bean parent="MaintenanceGroupSectionGridLayout">
          <property name="title" value="Add/Edit Book Type"/>
          <property name="items">
            <list>
              <bean parent="AttributeField" p:propertyName="typeCode"/>
              <bean parent="AttributeField" p:propertyName="name"/>
              <bean parent="AttributeField" p:propertyName="description"/>
              <bean parent="AttributeField" p:propertyName="active"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>
  <bean id="BookTypeMaintenanceDocument" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="edu.sampleu.bookstore.bo.BookType"/>
    <property name="maintainableClass" value="org.kuali.rice.krad.maintenance.KualiMaintainableImpl"/>
    <property name="documentTypeName" value="BookTypeMaintenanceDocument"/>
    <property name="documentAuthorizerClass" value="org.kuali.rice.krad.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>typeCode</value>
      </list>
    </property>
  </bean>
</beans>
