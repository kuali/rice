  <bean id="BookType-InquiryView" parent="FormView">
    <property name="id" value="BookType-InquiryView" />
    <property name="title" value="Book Type Inquiry" />
    <property name="navigation">
      <ref bean="testViewMenu" />
    </property>
    <property name="entryPageId" value="page1" />
    <property name="items">
      <list>
        <bean parent="Page_Disclosure" p:id="page1">
          <property name="items">
            <list>
              <ref bean="BookType-InquiryView-Section1" />
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="formClass"
      value="org.kuali.rice.kns.web.struts.form.InquiryForm" />
  </bean>

  <bean id="BookType-InquiryView-Section1" parent="GroupSectionGridLayout">
    <property name="id" value="BookType-InquiryView-Section1" />
    <property name="title" value="Book Type" />
    <property name="instructionalText" value="A Book Type." />
    <property name="fieldBindByNamePrefix" value="dataObject" />
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="typeCode" />
        <bean parent="AttributeField" p:propertyName="name" />
        <bean parent="AttributeField" p:propertyName="description" />
      </list>
    </property>
  </bean> 

</beans>