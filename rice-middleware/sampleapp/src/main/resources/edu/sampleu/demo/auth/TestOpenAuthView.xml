<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <!--
  ********************************************************************************************************************
                                           Test Open Auth View
  ********************************************************************************************************************
  -->
  <bean id="TestOpenAuthView" parent="Uif-FormView">
    <property name="parentLocation">
      <bean parent="Uif-RicePortalParentLocation"/>
    </property>
    <property name="headerText" value="Test Open Authorization View"/>
    <property name="instructionalText" value="Editing of this view is controlled by a KIM permission."/>
    <property name="singlePageView" value="true"/>
    <property name="page">
      <bean parent="Uif-Page"/>
    </property>
    <property name="items">
      <list>
        <bean parent="Uif-Disclosure-VerticalBoxSection">
          <property name="headerText" value="Group"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="field1" p:label="Field 1">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="Uif-InputField" p:propertyName="field2" p:label="Field 2">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="21"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="formClass" value="edu.sampleu.demo.kitchensink.UifComponentsTestForm"/>
  </bean>

</beans>