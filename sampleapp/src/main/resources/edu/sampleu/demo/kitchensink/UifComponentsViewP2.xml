<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Field Groups
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-FieldGroups" parent="Uif-Disclosure-VerticalBoxSection">
    <property name="headerText" value="Field Groups"/>
    <property name="instructionalText"
              value="Field Groups can have multiple fields but appear to the user as one logical field grouping."/>
    <property name="items">
      <list>
        <bean parent="Uif-VerticalFieldGroup" p:label="Field Group 1">
          <property name="group.instructionalText" value="Field group with vertical layout and group/field labels"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="field80" p:label="Field 1">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="Uif-InputField" p:propertyName="field121" p:label="Field 2">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="21"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>

        <bean parent="Uif-HorizontalFieldGroup" p:label="Field Group 2">
          <property name="group.instructionalText" value="Field group with horizontal layout and no field labels"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="field122" p:fieldLabel.render="false">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="Uif-InputField" p:propertyName="field123" p:fieldLabel.render="false">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="21"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>

        <bean parent="Uif-HorizontalFieldGroup" p:label="Field Group 3">
          <property name="group.instructionalText" value="Field group with input and action field"/>
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="field124" p:fieldLabel.render="false">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="Uif-PrimaryActionButton" p:actionLabel="find" p:actionScript="alert('You clicked a button');"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Message Fields
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-MessageFields" parent="Uif-VerticalBoxSection">
    <property name="headerText" value="Message Fields"/>
    <property name="instructionalText" value="Message fields display read-only text"/>
    <property name="items">
      <list>
        <bean parent="Uif-Message" p:messageText="Message Field 1 Text"/>
        <bean parent="Uif-Message" p:messageText="Message Field with expression text: '@{field88}'"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Attribute Security
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-AttributeSecurity" parent="Uif-VerticalBoxSection">
    <property name="headerText" value="Attribute Security"/>
    <property name="instructionalText" value="Input Fields with Security Masking"/>
    <property name="items">
      <list>
        <bean parent="GenericTextField" p:propertyName="mField1" p:label="Masked Field">
          <property name="componentSecurity.attributeSecurity">
            <bean parent="AttributeSecurity">
              <property name="mask" value="true"/>
              <property name="maskFormatter">
                <bean parent="MaskFormatterLiteral" p:literal="*********"/>
              </property>
            </bean>
          </property>
        </bean>
        <bean parent="GenericTextField" p:propertyName="mField2" p:label="Partial Masked Field"
              p:instructionalText="maskLength 5">
          <property name="componentSecurity.attributeSecurity">
            <bean parent="AttributeSecurity">
              <property name="partialMask" value="true"/>
              <property name="partialMaskFormatter">
                <bean parent="MaskFormatterSubString" p:maskLength="5"/>
              </property>
            </bean>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Image Fields
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-ImageFields" parent="Uif-VerticalBoxSection">
    <property name="headerText" value="Image Fields"/>
    <property name="instructionalText" value="Fields that display an image"/>
    <property name="items">
      <list>
        <bean parent="Uif-ImageField" p:label="Image field with alt text" p:altText="pdf image" p:title="pdf image"
              p:source="@{#ConfigProperties['krad.externalizable.images.url']}pdf.png"/>
        <bean parent="Uif-ImageField" p:fieldLabel.render="false" p:altText="computer programming" p:title="computer programming"
              p:captionHeaderText="Image Caption Text" p:cutlineText="Image cutline text here" p:cssClasses="kr-photo"
              p:source="@{#ConfigProperties['krad.externalizable.images.url']}computer_programming.jpg"/>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Action Fields
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-ActionFields" parent="Uif-Disclosure-VerticalBoxSection">
    <property name="headerText" value="Action Fields"/>
    <property name="instructionalText"
              value="Action fields perform an action and can be images, links, buttons or combinations of the aforementioned"/>
    <property name="items">
      <list>
        <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField" p:actionScript="alert('You clicked the link');" />

               <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField presubmit call true"  p:methodToCall="start" p:preSubmitCall="returnBoolean(true)" p:successCallback="successCallbackF">

               </bean>

               <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField presubmit call false"  p:methodToCall="start" p:preSubmitCall="returnBoolean(false)"/>

               <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField ajaxSubmit call false"  p:methodToCall="start" p:ajaxSubmit="false" p:preSubmitCall="returnBoolean(true)"/>

               <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField sucessCallBack"  p:methodToCall="start" p:ajaxSubmit="true" p:successCallback="successCallbackF"/>

                <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField validate"  p:methodToCall="start" p:ajaxSubmit="true" p:successCallback="successCallbackF" p:performClientSideValidation = "true"/>

              <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField errorCallBack"  p:methodToCall="errorCheck" p:ajaxSubmit="true" p:errorCallback="function(htmlContent) {alert('Error Call back eg');}"/>

              <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField ajax redirect"  p:methodToCall="redirectCheck" p:ajaxSubmit="true"  />


        <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField image right" p:actionImagePlacement="RIGHT"
              p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"
                  p:altText="Search"/>
          </property>
        </bean>

        <bean parent="Uif-ActionLink" p:actionLabel="ActionLinkField image left (default)"
              p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"
                  p:altText="Search"/>
          </property>
        </bean>

        <bean parent="Uif-ActionImage" p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}down.png"
                  p:altText="Action Image demonstration"/>
          </property>
        </bean>

        <bean parent="Uif-PrimaryActionButton" p:actionLabel="button" p:actionScript="alert('You clicked a button');"/>

        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Image BOTTOM" p:actionImagePlacement="BOTTOM"
              p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
          </property>
        </bean>

        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Image TOP" p:actionImagePlacement="TOP"
              p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
          </property>
        </bean>

        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Image LEFT" p:actionImagePlacement="LEFT"
              p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
          </property>
        </bean>

        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Image RIGHT" p:actionImagePlacement="RIGHT"
              p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"/>
          </property>
        </bean>

        <bean parent="Uif-PrimaryActionButton" p:actionScript="alert('You clicked a button');">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"
                  p:altText="Image Only button"/>
          </property>
        </bean>

        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Disabled Button" p:methodToCall="foo" p:disabled="true"/>

        <bean parent="Uif-ActionField" p:methodToCall="foo" p:label="Action Field">
          <property name="actionImage">
            <bean parent="Uif-Image"
                  p:source="@{#ConfigProperties['krad.externalizable.images.url']}searchicon.gif"
                  p:altText="Action Field"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Link Fields
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-LinkFields" parent="Uif-VerticalBoxSection">
    <property name="headerText" value="Link Fields"/>
    <property name="items">
      <list>
        <bean parent="Uif-LinkField" p:linkText="Kuali Website"
              p:href="http://www.kuali.org" p:label="LinkField is used for href links"/>

        <bean parent="Uif-LinkField" p:linkText="Kuali Website in a lightbox" p:target="_blank"
              p:href="http://www.kuali.org" p:label="LinkField can be used with lightboxes">
          <property name="lightBox">
            <bean parent="Uif-LightBox"/>
          </property>
        </bean>

        <bean parent="Uif-LinkGroup" p:headerText="LinkGroup"
              p:instructionalText="LinkGroup with | delimiter and [] begin and end delimiter"
              p:groupBeginDelimiter="[" p:groupEndDelimiter="]" p:linkSeparator="|">
          <property name="items">
            <list>
              <bean parent="Uif-ActionLink"
                    p:actionScript="alert('You clicked the link');" p:actionLabel="Link 1"/>
              <bean parent="Uif-ActionLink"
                    p:actionScript="alert('You clicked the link');" p:actionLabel="Link 2"/>
              <bean parent="Uif-ActionLink"
                    p:actionScript="alert('You clicked the link');" p:actionLabel="Link 3"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <!--
  ********************************************************************************************************************
                                           UIF Comp - Other Fields
  ********************************************************************************************************************
  -->
  <bean id="UifCompView-OtherFields" parent="Uif-Disclosure-VerticalBoxSection">
    <property name="headerText" value="Miscellaneous Fields and Groups"/>
    <property name="instructionalText" value="A variety of other fields and groups"/>
    <property name="items">
      <list>
        <bean parent="Uif-TabSection">
          <property name="headerText" value="Tabs"/>
          <property name="instructionalText"
                    value="TabGroup holds a list of groups that can be switched between, titles are based on the groups title property"/>
          <property name="items">
            <list>
              <bean parent="UifCompView-TextFields3"/>
              <bean parent="UifCompView-TextAreas"/>
            </list>
          </property>
        </bean>

        <bean parent="Uif-TreeSection" p:instructionalText="Data Tree">
          <property name="headerText" value="Basic String Data tree"/>
          <property name="propertyName" value="tree1"/>
        </bean>

        <bean parent="Uif-TreeSection" p:instructionalText="Data Tree">
          <property name="headerText" value="Tree with Data Group"/>
          <property name="propertyName" value="tree2"/>

          <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
              <property name="labelPrototype">
                <bean parent="Uif-Message"/>
              </property>
              <property name="dataGroupPrototype">
                <bean parent="Uif-VerticalBoxGroup"  p:style="margin-left: 2em;">
                  <property name="items">
                    <list>
                      <bean parent="Uif-HorizontalFieldGroup">
                        <property name="items">
                          <list>
                            <bean parent="Uif-InputField" p:propertyName="field1" p:label="Field 1"
                                  p:required="true" p:labelPlacement="TOP" p:instructionalText="instructions 1"
                                  p:fieldLabel.cssClasses="labelTop"/>
                            <bean parent="Uif-InputField" p:propertyName="field2" p:label="Field 2"
                                  p:required="true" p:labelPlacement="TOP" p:instructionalText="instructions 2"
                                  p:fieldLabel.cssClasses="labelTop"/>
                            <bean parent="Uif-InputField" p:propertyName="field3" p:label="Field 3"
                                  p:required="true" p:labelPlacement="TOP" p:instructionalText="instructions 3"
                                  p:fieldLabel.cssClasses="labelTop"/>
                            <bean parent="Uif-InputField" p:propertyName="field4" p:label="Field 4"
                                  p:required="true" p:labelPlacement="TOP" p:instructionalText="instructions 4"
                                  p:fieldLabel.cssClasses="labelTop"/>
                          </list>
                        </property>
                      </bean>
                    </list>
                  </property>
                </bean>
              </property>
            </bean>
          </property>
        </bean>

        <bean parent="Uif-ReorderSection">
          <property name="headerText" value="Reordering Group"/>
          <property name="instructionalText"
                    value="Reorder the group items by dragging one of the items to its new position. Note each of these 'boxes' could contain a field or group of fields"/>
          <property name="items">
            <list>
              <bean parent="Uif-Message" p:messageText="Box 1"
                    p:cssClasses="fl-font-size-150,fl-input-outline"/>
              <bean parent="Uif-Message" p:messageText="Box 2"
                    p:cssClasses="fl-font-size-150,fl-input-outline"/>
              <bean parent="Uif-Message" p:messageText="Box 3"
                    p:cssClasses="fl-font-size-150,fl-input-outline"/>
              <bean parent="Uif-Message" p:messageText="Box 4"
                    p:cssClasses="fl-font-size-150,fl-input-outline"/>
              <bean parent="Uif-Message" p:messageText="Box 5"
                    p:cssClasses="fl-font-size-150,fl-input-outline"/>
            </list>
          </property>
        </bean>

        <bean parent="Uif-Iframe" p:width="800px" p:height="550px" p:source="http://www.kuali.org"/>

      </list>
    </property>
  </bean>

  <bean id="UifCompView-ScrollableGroups" parent="Uif-Disclosure-HorizontalBoxSection">
    <property name="headerText" value="Scrollable Groups"/>
    <property name="instructionalText"
              value="By adding scrollable to a group or section a scrollbar appears if the content exceeds the specified size."/>
    <property name="items">
      <list>
        <bean parent="Uif-Disclosure-VerticalBoxSubSection">
          <property name="headerText" value="This is a scrollable sub section."/>
          <property name="instructionalText"
                    value="This also works on sections."/>
          <property name="width" value="30%"/>
          <property name="scrollpane">
            <bean parent="Uif-Scrollpane">
              <property name="height" value="100px"/>
            </bean>
          </property>
          <property name="items">
            <list>
              <bean parent="Uif-Message" p:messageText="A group or section can be made scrollable by adding the Uif-Scrollpane bean.
                With the Uif-Scrollpane bean the height and/or width can be specified.  If the content size exceeds the specified size then
                scrollbars are rendered for the group/section."/>

              <bean parent="Uif-InputField" p:propertyName="field80" p:label="Field 1">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="Uif-Message" p:messageText="Only the content of the section/sub section is made scrollable.  Title and the
               instructional text are not scrolled."/>
            </list>
          </property>
        </bean>

        <bean parent="Uif-VerticalBoxGroup">
          <property name="width" value="30%"/>
          <property name="scrollpane">
            <bean parent="Uif-Scrollpane">
              <property name="height" value="100px"/>
            </bean>
          </property>
          <property name="items">
            <list>
              <bean parent="Uif-Message" p:messageText="This is a scrollable group."/>

              <bean parent="Uif-InputField" p:propertyName="field80" p:label="Field 1">
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="5"/>
                </property>
              </bean>

              <bean parent="Uif-Message" p:messageText="A group or section can be made scrollable by adding the Uif-Scrollpane bean.
                With the Uif-Scrollpane bean the height and/or width can be specified.  If the content size exceeds the specified size then
                scrollbars are rendered for the group/section."/>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

</beans>