<!-- Maintenance Section Definitions -->


  <bean id="RIADocTypeMapMaintenanceDocument-RIADocTypeMappings" parent="RIADocTypeMapMaintenanceDocument-RIADocTypeMappings-parentBean" />

  <bean id="RIADocTypeMapMaintenanceDocument-RIADocTypeMappings-parentBean" abstract="true" parent="MaintainableSectionDefinition">
    <property name="maintainableItems" >
      <list>
        <bean parent="MaintainableFieldDefinition"
              p:defaultValueFinderClass="org.kuali.rice.kew.ria.valuefinder.RIADocTypeMapNextIdFinder"
              p:name="ID"
              p:unconditionallyReadOnly="true" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="riaDocTypeName" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="riaUrl" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="helpUrl" />
        <bean parent="MaintainableFieldDefinition"
              p:required="true"
              p:name="editable" />
        <bean parent="MaintainableFieldDefinition"
              p:name="initGroups" />
        <bean parent="MaintainableFieldDefinition"
              p:name="versionNumber" />
      </list>
    </property>
    
    <property name="id" value="RIA DocType Mappings" />
    <property name="title" value="RIA DocType Mappings" />
  </bean>
</beans>
