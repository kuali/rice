                <value>classpath:org/kuali/rice/kim/bo/datadictionary/ExternalIdentifierType.xml</value>
                <value>classpath:org/kuali/rice/kim/bo/datadictionary/KimAddressType.xml</value>
            </list>
    </property>
        <property name="packagePrefixes">
            <list>
                <value>org.kuali.rice.kim.</value>
            </list>
        </property>
        <property name="externalizableBusinessObjectImplementations">
            <map>
             <entry key="org.kuali.rice.kim.bo.Person" value="org.kuali.rice.kim.bo.impl.PersonImpl" />
             <entry key="org.kuali.rice.kim.bo.Role" value="org.kuali.rice.kim.bo.impl.RoleImpl" />
             <entry key="org.kuali.rice.kim.bo.Group" value="org.kuali.rice.kim.bo.impl.GroupImpl" />
             <entry key="org.kuali.rice.kim.bo.entity.KimEntity" value="org.kuali.rice.kim.bo.entity.impl.KimEntityImpl" />
            </map>
        </property>
  </bean>

  <bean id="kimModule" class="org.kuali.rice.kim.service.impl.KimModuleService"
        p:moduleConfiguration-ref="kimModuleConfiguration"
        p:kualiModuleService-ref="kualiModuleService" />


  <bean id="kimIdentityManagementService" class="org.kuali.rice.kim.service.impl.IdentityManagementServiceImpl"
    p:entityPrincipalCacheMaxSize="${kim.cache.entity.max.size}"
    p:entityPrincipalCacheMaxAgeSeconds="${kim.cache.entity.max.age.seconds}"
    p:groupCacheMaxSize="${kim.cache.group.max.size}"
    p:groupCacheMaxAgeSeconds="${kim.cache.group.max.age.seconds}"
    p:permissionCacheMaxSize="${kim.cache.permission.max.size}"
    p:permissionCacheMaxAgeSeconds="${kim.cache.permission.max.age.seconds}"
    p:responsibilityCacheMaxSize="${kim.cache.responsibility.max.size}"
    p:responsibilityCacheMaxAgeSeconds="${kim.cache.responsibility.max.age.seconds}" />

