      </list>
    </property>
  </bean>

  <bean id="Demo-Menu-Researcher-WorkflowGroup" parent="Uif-MenuList" p:headerText="Workflow">
    <property name="items">
      <list>
        <bean parent="Uif-MenuAction" p:actionLabel="Preferences"/>
      </list>
    </property>
  </bean>
  <!-- ex:Demo-AppHeader-Example1 end-->

</beans>