   <bean id="VendorMaintenanceDocument" parent="VendorMaintenanceDocument-parentBean" />
   <bean id="VendorMaintenanceDocument-parentBean" abstract="true" parent="uifMaintenanceDocumentEntry">
      <property name="dataObjectClass" value="edu.sampleu.financial.bo.VendorDetail" />
      <property name="lockingKeys">
         <list>
            <value>vendorHeaderGeneratedIdentifier</value>
            <value>vendorDetailAssignedIdentifier</value>
         </list>
      </property>
      <property name="documentTypeName" value="PVEN" />
      <property name="workflowAttributes">
         <ref bean="VendorMaintenanceDocument-workflowAttributes" />
      </property>
   </bean>

   <bean id="VendorMaintenanceView" parent="VendorMaintenanceView-parentBean" />
   <bean id="VendorMaintenanceView-parentBean" abstract="true" parent="MaintenanceView">
      <property name="title" value="Vendor Maintenance Document" />
      <property name="dataObjectClassName" value="edu.sampleu.financial.bo.VendorDetail" />
      <property name="validateClientSide" value="false" />
      <property name="items">
         <list merge="true">
            <bean parent="MaintenanceGroupSectionGridLayout">
               <property name="items">
                  <list>
                     <bean parent="HeaderFour" p:headerText="General Information" p:colSpan="2"/>
                     <bean parent="InputField" p:propertyName="vendorHeaderGeneratedIdentifier" />
                     <bean parent="InputField" p:propertyName="vendorDetailAssignedIdentifier" />
                     <bean parent="InputField" p:propertyName="vendorNumber" p:readOnly="true"/>
                     <bean parent="InputField" p:propertyName="vendorParentIndicator" p:defaultValue="true"/>
                     <bean parent="InputField" p:propertyName="vendorParentName" p:readOnly="true"/>
                     <bean parent="InputField" p:propertyName="vendorName" />
                     <bean parent="InputField" p:propertyName="vendorLastName" />
                     <bean parent="InputField" p:propertyName="vendorFirstName" />
                     <bean parent="HeaderFour" p:headerText="Corporate Information" p:colSpan="2"/>
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorTypeCode" p:required="true"/>
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorForeignIndicator" p:defaultValue="No" p:required="true"/>
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorTaxNumber" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorTaxTypeCode" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorOwnershipCode" p:required="true"/>
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorOwnershipCategoryCode" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorW9ReceivedIndicator" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorW8BenReceivedIndicator" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorFederalWithholdingTaxBeginningDate" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorFederalWithholdingTaxEndDate" />
                     <bean parent="InputField" p:propertyName="vendorHeader.vendorDebarredIndicator" />
                  </list>
               </property>
               <property name="title" value="Vendor" />
            </bean>
            <bean parent="MaintenanceCollectionGroupSection">
               <property name="title" value="Address" />
               <property name="collectionObjectClass" value="edu.sampleu.financial.bo.VendorAddress" />
               <property name="propertyName" value="vendorAddresses" />
               <property name="items">
                  <list>
                     <bean parent="InputField" p:propertyName="vendorAddressGeneratedIdentifier" />
                     <bean parent="InputField" p:propertyName="vendorAddressTypeCode" />
                     <bean parent="InputField" p:propertyName="vendorLine1Address" />
                     <bean parent="InputField" p:propertyName="vendorLine2Address" />
                     <bean parent="InputField" p:propertyName="vendorCityName" />
                     <bean parent="InputField" p:propertyName="vendorStateCode" />
                     <bean parent="InputField" p:propertyName="vendorZipCode" />
                     <bean parent="InputField" p:propertyName="vendorAddressInternationalProvinceName" />
                     <bean parent="InputField" p:propertyName="vendorCountryCode" />
                     <bean parent="InputField" p:propertyName="vendorAttentionName" />
                     <bean parent="InputField" p:propertyName="vendorBusinessToBusinessUrlAddress" />
                     <bean parent="InputField" p:propertyName="vendorFaxNumber" />
                     <bean parent="InputField" p:propertyName="vendorAddressEmailAddress" p:constraintText="must be valid email address"/>
                     <bean parent="InputField" p:propertyName="vendorDetailAssignedIdentifier" />
                     <bean parent="InputField" p:propertyName="active" />
                  </list>
               </property>
               <property name="layoutManager.summaryTitle" value="Address" />
               <property name="layoutManager.summaryFields">
                  <list>
                     <value>vendorAddressTypeCode</value>
                     <value>vendorCityName</value>
                  </list>
               </property>
               <property name="subCollections">
                  <list>
                     <bean parent="MaintenanceSubCollectionGroup">
                        <property name="collectionObjectClass" value="edu.sampleu.financial.bo.VendorDefaultAddress" />
                        <property name="propertyName" value="vendorDefaultAddresses" />
                        <property name="items">
                           <list>
                              <bean parent="InputField" p:propertyName="vendorCampusCode" />
                              <bean parent="InputField" p:propertyName="vendorAddressGeneratedIdentifier" />
                              <bean parent="InputField" p:propertyName="vendorDefaultAddressGeneratedIdentifier" />
                              <bean parent="InputField" p:propertyName="active" />
                           </list>
                        </property>
                        <property name="layoutManager.summaryTitle" value="Default Address" />
                        <property name="layoutManager.summaryFields">
                           <list>
                              <value>vendorCampusCode</value>
                           </list>
                        </property>
                     </bean>
                  </list>
               </property>
            </bean>
         </list>
      </property>
   </bean>
   
    <bean id="VendorMaintenanceDocument-workflowAttributes" parent="VendorMaintenanceDocument-workflowAttributes-parentBean"/>
    <bean id="VendorMaintenanceDocument-workflowAttributes-parentBean" abstract="true" parent="WorkflowAttributes"/>

</beans>