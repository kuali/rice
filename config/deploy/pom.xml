<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.rice</groupId>
    <artifactId>rice-config</artifactId>
    <version>2.0.0-m9-SNAPSHOT</version>
  </parent>
  <artifactId>rice-deploy</artifactId>
  <packaging>jar</packaging>
  <name>Rice Deploy</name>
  <properties>
    <private.key>kr-key.pem</private.key>
    <maven.test.skip>true</maven.test.skip>
    <deploy.environment>ec2</deploy.environment>
    <deploy.config.common>${project.build.directory}/classes/common-config.xml</deploy.config.common>
    <deploy.config.app>${project.build.directory}/classes/${deploy.app.configfile}</deploy.config.app>
    <deploy.config.env>${project.build.directory}/classes/${deploy.env}-config.xml</deploy.config.env>
    <impex.database>${db.instance}</impex.database>
    <impex.username>${db.instance}</impex.username>
    <impex.password>${db.instance}</impex.password>
    <deploy.server.1>deploy1.rice.kuali.org</deploy.server.1>
    <deploy.server.2>deploy2.rice.kuali.org</deploy.server.2>
    <impex.oracle.url>jdbc:oracle:thin:@oracle.rice.kuali.org:1521:ORACLE</impex.oracle.url>
    <impex.mysql.dba.url>jdbc:mysql://mysql.rice.kuali.org</impex.mysql.dba.url>
    <impex.mysql.url>${impex.mysql.dba.url}/${impex.database}</impex.mysql.url>
    <deploy.app>sampleapp</deploy.app>
    <deploy.operation>reset</deploy.operation>
    <db.vendor>oracle</db.vendor>
    <impex.url>${impex.oracle.url}</impex.url>
    <impex.dba.url>${impex.oracle.url}</impex.dba.url>
  </properties>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <executions>
          <execution>
            <id>gmaven-compile-stubs</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>gmaven-generate-stubs</id>
            <phase>none</phase>
          </execution>
          <execution>
            <id>gmaven-test-compile-stubs</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-banned-dependencies</id>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>sampleapp</id>
      <properties>
        <local.app.dir>../../sampleapp</local.app.dir>
        <deploy.app>sample-app</deploy.app>
        <deploy.artifactId>rice-sampleapp</deploy.artifactId>
        <deploy.app.configfile>sample-app-config.xml</deploy.app.configfile>
      </properties>
    </profile>
    <profile>
      <id>standalone</id>
      <properties>
        <local.app.dir>../../standalone</local.app.dir>
        <deploy.app>standalone</deploy.app>
        <deploy.artifactId>rice-standalone</deploy.artifactId>
        <deploy.app.configfile>standalone-config.xml</deploy.app.configfile>
      </properties>
    </profile>
    <profile>
      <id>env1</id>
      <properties>
        <deploy.env>env1</deploy.env>
        <deploy.server>${deploy.server.1}</deploy.server>
        <public.url>http://dev1.rice.kuali.org</public.url>
        <tomcat.instance>tomcat1</tomcat.instance>
        <db.instance>RICEENV1</db.instance>
      </properties>
    </profile>
    <profile>
      <id>env2</id>
      <properties>
        <deploy.env>env2</deploy.env>
        <deploy.server>${deploy.server.1}</deploy.server>
        <public.url>http://dev2.rice.kuali.org</public.url>
        <tomcat.instance>tomcat2</tomcat.instance>
        <db.instance>RICEENV2</db.instance>
        <db.vendor>mysql</db.vendor>
        <impex.dba.url>${impex.mysql.dba.url}</impex.dba.url>
        <impex.url>${impex.mysql.url}</impex.url>
      </properties>
    </profile>
    <profile>
      <id>env3</id>
      <properties>
        <deploy.env>env3</deploy.env>
        <deploy.server>${deploy.server.1}</deploy.server>
        <public.url>http://env3.rice.kuali.org</public.url>
        <tomcat.instance>tomcat3</tomcat.instance>
        <db.instance>RICEENV3</db.instance>
      </properties>
    </profile>
    <profile>
      <id>env4</id>
      <properties>
        <deploy.env>env4</deploy.env>
        <deploy.server>${deploy.server.2}</deploy.server>
        <public.url>http://env4.rice.kuali.org</public.url>
        <tomcat.instance>tomcat1</tomcat.instance>
        <db.instance>RICEENV4</db.instance>
      </properties>
    </profile>
    <profile>
      <id>env5</id>
      <properties>
        <deploy.env>env5</deploy.env>
        <deploy.server>${deploy.server.2}</deploy.server>
        <public.url>http://env5.rice.kuali.org</public.url>
        <tomcat.instance>tomcat2</tomcat.instance>
        <db.instance>RICEENV5</db.instance>
        <deploy.app>standalone</deploy.app>
      </properties>
    </profile>
    <profile>
      <id>env6</id>
      <properties>
        <deploy.env>env6</deploy.env>
        <deploy.server>${deploy.server.2}</deploy.server>
        <public.url>http://demo.rice.kuali.org</public.url>
        <tomcat.instance>tomcat3</tomcat.instance>
        <db.instance>RICEENV6</db.instance>
      </properties>
    </profile>
    <profile>
      <id>deploy</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>antrun</id>
                <phase>install</phase>
                <configuration>
                  <target>
                    <ant antfile="build.xml" target="${deploy.operation}" />
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-http-plugin</artifactId>
            <executions>
              <execution>
                <id>wait-for-tomcat-startup</id>
                <phase>install</phase>
                <goals>
                  <goal>wait</goal>
                </goals>
                <configuration>
                  <url>${public.url}</url>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>local</id>
      <properties>
        <deploy.war>${local.app.dir}/target/${deploy.artifactId}-${project.version}.war</deploy.war>
        <impex.dir>../../db/impex/master</impex.dir>
      </properties>
    </profile>
    <profile>
      <id>download</id>
      <properties>
        <deploy.groupId>org.kuali.rice</deploy.groupId>
        <deploy.artifactId>rice-sampleapp</deploy.artifactId>
        <deploy.version>2.0.0-m8</deploy.version>
        <deploy.type>war</deploy.type>
        <deploy.war>${project.build.directory}/dependency/${deploy.artifactId}-${deploy.version}.${deploy.type}</deploy.war>
        <impex.dir>${project.build.directory}/checkout/db/impex/master</impex.dir>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.3</version>
            <configuration>
              <localRepositoryDirectory>${project.build.directory}/repository</localRepositoryDirectory>
              <artifactItems>
                <artifactItem>
                  <groupId>${deploy.groupId}</groupId>
                  <artifactId>${deploy.artifactId}</artifactId>
                  <version>${deploy.version}</version>
                  <type>${deploy.type}</type>
                  <includes>**/MANIFEST.MF</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
            <executions>
              <execution>
                <id>copy</id>
                <phase>initialize</phase>
                <goals>
                  <goal>copy</goal>
                  <goal>unpack</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.kuali.maven.plugins</groupId>
            <artifactId>maven-manifest-plugin</artifactId>
            <version>1.0.0</version>
            <configuration>
              <filename>${project.build.directory}/dependency/META-INF/MANIFEST.MF</filename>
              <attribute>SVN-Revision</attribute>
              <prefix>manifest</prefix>
            </configuration>
            <executions>
              <execution>
                <id>svnrevision</id>
                <phase>initialize</phase>
                <goals>
                  <goal>svnrevision</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.6</version>
            <executions>
              <execution>
                <id>checkout</id>
                <phase>initialize</phase>
                <configuration>
                  <target>
                    <property name="manifest.svn.url" value="https://test.kuali.org/svn/rice/trunk/db@${manifest.SVN-Revision}" />
                    <property name="checkout.dir" value="${project.build.directory}/checkout/db" />
                    <echo>Checking out ${manifest.svn.url}</echo>
                    <exec executable="svn">
                      <arg value="checkout" />
                      <arg value="${manifest.svn.url}" />
                      <arg value="${checkout.dir}" />
                    </exec>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
