          <property name="items">
            <list>
              <bean id="UifCompView-LinkField4" parent="Uif-ActionLink"
                    p:actionScript="alert('You clicked the link');"/>
              <bean id="UifCompView-LinkField5" parent="Uif-ActionLink"
