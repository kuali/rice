<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Label demo -->
  <bean id="Demo-LabelView" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoLabel.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.element.Label"/>
    <property name="docBookAnchor" value="d6813e4605"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-Label-Example1"/>
        <ref bean="Demo-Label-Example2"/>
        <ref bean="Demo-Label-Example3"/>
      </list>
    </property>
  </bean>

  <!-- Default -->
  <bean id="Demo-Label-Example1"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Label-Example1 start-->
        <bean parent="Uif-Label" p:labelText="Default Label"/>
        <!-- ex:Demo-Label-Example1 end-->
      </list>
    </property>
  </bean>

  <bean id="Demo-Label-Example2"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Label-Example2 start-->
        <bean parent="Uif-Label" p:labelText="No Colon Label" p:renderColon="false"/>
        <!-- ex:Demo-Label-Example2 end-->
      </list>
    </property>
  </bean>

  <bean id="Demo-Label-Example3"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Label-Example3 start-->
        <bean parent="Uif-Label" p:labelText="Label with required message" p:required="true">
          <property name="requiredIndicator" value="This is required."/>
        </bean>
        <!-- ex:Demo-Label-Example3 end-->
      </list>
    </property>
  </bean>
</beans>