<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- KIMUserControl demo -->
  <bean id="Demo-KIMUserControlView" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoKIMUserControl.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.control.UserControl"/>
    <property name="docBookAnchor" value="d7339e5871"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-KIMUserControl-Example1"/>
        <ref bean="Demo-KIMUserControl-Example2"/>
      </list>
    </property>
  </bean>

  <!-- Default -->
  <bean id="Demo-KIMUserControl-Example1" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-KIMUserControl-Example1 start-->
        <bean parent="Uif-InputField" p:propertyName="testPerson.principalName">
          <property name="control">
            <bean parent="Uif-KimPersonControl" p:principalIdPropertyName="testPersonId"
                  p:personNamePropertyName="testPerson.name"/>
          </property>
        </bean>
        <!-- ex:Demo-KIMUserControl-Example1 end-->
      </list>
    </property>
  </bean>

  <!-- KIMUserControl with different options set-->
  <bean id="Demo-KIMUserControl-Example2" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-KIMUserControl-Example2 start-->
        <bean parent="Uif-InputField" p:propertyName="testPerson.principalName" p:widgetInputOnly="true">
          <property name="control">
            <bean parent="Uif-KimPersonControl" p:principalIdPropertyName="testPersonId"
                  p:personNamePropertyName="testPerson.name"/>
          </property>
        </bean>
        <!-- ex:Demo-KIMUserControl-Example2 end-->
      </list>
    </property>
  </bean>
</beans>