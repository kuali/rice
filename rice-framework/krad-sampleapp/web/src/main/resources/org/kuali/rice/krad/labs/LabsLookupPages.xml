<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="KradLookupSample-PageR8C3" parent="KradSampleAppView">
    <property name="page.items">
      <list>
        <bean id="KradLookupSampleItems-PageR8C3" parent="Uif-VerticalBoxSection">
          <property name="items">
            <list>

              <bean parent="Uif-InputField" p:propertyName="inputField12">
                <property name="instructionalText" value="Click the button to perform a lookup on TravelAccounts"/>
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinder"
                        p:dataObjectClassName="org.kuali.rice.krad.demo.travel.dataobject.TravelAccount"
                        p:fieldConversions="number:inputField12"/>
                </property>
              </bean>

              <bean parent="Uif-ActionLink" p:actionLabel="Show Dialog"
                    p:actionScript="showDialog('KradLookupSample-PageR8C3-Dialog');"/>

              <bean parent="Uif-ActionLink" p:actionLabel="Show KC Dialog"
                    p:actionScript="showDialog('KradLookupSample-PageR8C3-KC-Dialog');"/>

              <bean id="KradLookupSample-PageR8C3-Dialog" parent="Uif-DialogGroup" p:headerText="Dialog with Lookup">
                <property name="layoutManager">
                  <bean parent="Uif-CssGridLabelColumnLayout"/>
                </property>
                <property name="items">
                  <list>
                    <bean parent="Uif-InputField" p:propertyName="inputField13">
                      <property name="instructionalText" value="Click the button to perform a lookup with return by script on TravelAccounts" />
                      <property name="quickfinder">
                        <bean parent="Uif-QuickFinderByScript" p:dataObjectClassName="org.kuali.rice.krad.demo.travel.dataobject.TravelAccount"
                              p:fieldConversions="number:inputField13"/>
                      </property>
                    </bean>
                  </list>
                </property>
                <property name="footer.items">
                  <list>
                    <bean parent="Uif-DialogDismissButton" p:actionLabel="Continue"/>
                  </list>
                </property>
              </bean>

            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="KradLookupSample-PageR8C3-KC-Dialog" parent="KradLookupSample-PageR8C3-KC-Dialog-parentBean"/>
  <bean id="KradLookupSample-PageR8C3-KC-Dialog-parentBean" abstract="true" parent="Uif-DialogGroup"
        p:fieldBindingObjectPath="uiTestObject1"
        p:header.headerText="Add Personnel to Period">
    <property name="items">
      <list>
        <bean parent="Uif-CssGridSection-1FieldLabelColumn">
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:propertyName="field1" p:order="10" p:required="true">
                <property name="optionsFinder">
                  <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="field2" p:label="Object Code" p:order="20">
                <property name="optionsFinder">
                  <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder">
                    <property name="addBlankOption" value="false"/>
                  </bean>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="field3"
                    p:label="Group" p:order="30" p:required="false">
                <property name="optionsFinder">
                  <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder">
                    <property name="addBlankOption" value="false"/>
                  </bean>
                </property>
                <property name="control">
                  <bean parent="Uif-DropdownControl"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="field4" p:progressiveRender="@{#fp.field3 == 'Bananas'}"
                    p:label="New Group Name" p:order="40">
                <property name="control">
                  <bean p:size="30" parent="Uif-TextControl"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="field5"
                    p:order="50" p:required="true" p:defaultValue="Return by Script">
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinderByScript"
                        p:dataObjectClassName="org.kuali.rice.krad.demo.travel.dataobject.TravelAccount"
                        p:fieldConversions="number:field5"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="field6"
                    p:order="60" p:required="true">
                <property name="optionsFinder">
                  <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder">
                    <property name="addBlankOption" value="false"/>
                  </bean>
                </property>
                <property name="control">
                  <bean parent="Uif-DropdownControl"/>
                </property>
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinder"
                        p:dataObjectClassName="org.kuali.rice.krad.demo.travel.dataobject.TravelAccount"
                        p:fieldConversions="number:field6"/>
                </property>
              </bean>
              <bean parent="Uif-InputField" p:propertyName="field7"
                    p:order="70" p:label="Effort %"/>
              <bean parent="Uif-InputField" p:propertyName="field8"
                    p:order="80" p:label="Charged %"/>
              <bean parent="Uif-InputField" p:propertyName="dollar1"
                    p:order="90" p:enableAutoQuickfinder="false"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="footer">
      <bean parent="Uif-FooterBase">
        <property name="items">
          <list>
            <bean parent="Uif-PrimaryActionButton" p:actionLabel="Assign to Period @{#fp.uiTestObject1.field3}"
                  p:methodToCall="refresh"
                  p:refreshId="KradLookupSample-PageR8C3-KC-Dialog"
                  p:successCallback="dismissDialog('KradLookupSample-PageR8C3-KC-Dialog')"
                  p:order="10" p:performClientSideValidation="true"/>
            <bean parent="Uif-DialogDismissButton" p:actionLabel="Cancel" p:order="20"/>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean parent="Uif-InputField" p:propertyName="field1" p:order="10" p:required="true">
    <property name="optionsFinder">
      <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder">
        <property name="addBlankOption" value="false"/>
      </bean>
    </property>
  </bean>
  <bean parent="Uif-InputField" p:propertyName="field2" p:label="Object Code">
    <property name="optionsFinder">
      <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder">
        <property name="addBlankOption" value="false"/>
      </bean>
    </property>
  </bean>
  <bean parent="Uif-InputField" p:propertyName="field3" p:label="Group" p:order="30" p:required="false">
    <property name="optionsFinder">
      <bean class="org.kuali.rice.krad.demo.uif.options.FoodKeyValuesFinder">
        <property name="addBlankOption" value="false"/>
      </bean>
    </property>
    <property name="control">
      <bean parent="Uif-DropdownControl"/>
    </property>
  </bean>
</beans>

