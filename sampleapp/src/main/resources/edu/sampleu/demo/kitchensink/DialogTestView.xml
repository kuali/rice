<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


  <!--
  ********************************************************************************************************************
                                               Dialog Test View
  ********************************************************************************************************************
  -->
  <bean id="DialogTestView" parent="Uif-FormView">
    <property name="headerText" value="Dialog Test View"/>
    <property name="items">
      <list>
        <bean parent="Uif-Page" p:id="DialogView-Page1" p:headerText="Dialog Test Page 1">
          <property name="items">
            <list>
              <bean parent="DialogTestView-MainGroup"/>
             <!-- <bean parent="DialogTestView-DialogGroup"/>  -->
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="theme">
      <bean parent="Uif-KradTheme"/>
    </property>
    <property name="formClass" value="edu.sampleu.demo.kitchensink.UifDialogTestForm"/>
    <property name="growlMessagingEnabled" value="true"/>
  </bean>

  <bean id="DialogTestView_KNS" parent="DialogTestView">
    <property name="theme">
      <bean parent="Uif-ClassicKnsTheme"/>
    </property>
  </bean>

  <bean id="DialogTestView-MainGroup" parent="Uif-HorizontalBoxSection">
    <property name="headerText" value="Main Section"/>
    <property name="items">
      <list>
        <bean parent="Uif-Message" p:messageText="Welcome to the Dialog Test Page"/>
      </list>
    </property>
  </bean>

<!--  <bean id="DialogTestView-DialogGroup" parent="Uif-DialogGroup" />  -->
</beans>
