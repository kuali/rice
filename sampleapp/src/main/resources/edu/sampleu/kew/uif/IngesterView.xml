<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:p="http://www.springframework.org/schema/p" 
xsi:schemaLocation="http://www.springframework.org/schema/beans  
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


   <bean id="KEW-IngesterView" parent="KNSFormView">
      <property name="id" value="KEW-IngesterView"/>
      <property name="title" value="Ingester"/>
      <property name="items">
        <list>
          <bean parent="Page" p:id="page1" p:autoFocus="false" p:errorsField.combineMessages="false" p:errorsField.displayFieldLabelWithMessages="false">
             <property name="items">
               <list>
		       		<ref bean="uploadSection"/>   
		       </list>
             </property> 
          </bean> 
        </list>
      </property>    
      <property name="formClass" value="edu.sampleu.kew.krad.form.IngesterForm"/>
      <property name="footer">
			<ref bean="Footer_UploadClose" />
		</property>
   </bean>
   
   <bean id="uploadSection" parent="GroupGridLayout" p:disclosure.render="false">
      <property name="items">
        <list>
          <bean parent="uploadAttributeField" p:propertyName="files[0]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[1]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[2]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[3]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[4]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[5]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[6]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[7]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[8]"/>
          <bean parent="uploadAttributeField" p:propertyName="files[9]"/>
        </list>
      </property> 
   </bean>   
   
   <bean id="uploadAttributeField" p:label="XML File" parent="InputField_Form">
      <property name="control">
        <bean parent="FileControl"/>
      </property>
   </bean>
            
    <bean id="Footer_UploadClose" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="upload" p:actionLabel="Upload XML data"/>
        </list>
      </property>
  </bean>  
  
</beans>