<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- InputField demo -->
  <bean id="Demo-InputField-View" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoInputField.xml"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-InputField-Group1"/>
        <ref bean="Demo-InputField-Group2"/>
      </list>
    </property>
  </bean>

  <!-- Default -->
  <bean id="Demo-InputField-Group1"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-InputField-Group1 start-->
        <bean parent="Uif-InputField" p:propertyName="inputField1"/>
        <!-- ex:Demo-InputField-Group1 end-->
      </list>
    </property>
  </bean>

  <!-- Alt. Control -->
  <bean id="Demo-InputField-Group2"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-InputField-Group2 start-->
        <bean parent="Uif-InputField" p:propertyName="inputField2">
          <property name="control">
            <bean parent="Uif-TextAreaControl"/>
          </property>
        </bean>
        <!-- ex:Demo-InputField-Group2 end-->
      </list>
    </property>
  </bean>

</beans>