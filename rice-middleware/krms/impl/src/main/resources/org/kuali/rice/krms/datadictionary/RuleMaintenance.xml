  <bean id="RuleEditorView-RuleTreeViewControls" parent="Uif-HorizontalBoxSection"
        p:cssClasses="krms-rulesButtonBar" p:style="padding: 5px;">

    <property name="renderHeader" value="true"/>
    <property name="headerText" value="Propositions"/>

    <property name="items">
      <list>
      </list>
    </property>
  </bean>

  <bean id="RuleEditorView-RuleTreeEditControls" parent="Uif-HorizontalBoxSection" p:style="padding: 5px;"
        p:cssClasses="krms-rulesButtonBar">

    <property name="renderHeader" value="true"/>
    <property name="headerText" value="Propositions"/>
    <property name="onDocumentReadyScript" value="loadControlsInit();"/>

    <property name="items">
      <list>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('add');
          if (enabled) {
              ajaxCallPropositionTree('addProposition', 'RuleEditorView-Tree');
          }
          "
              p:actionLabel="Add">
          <property name="cssClasses">
            <list merge="true">
              <value>kr-add-button</value>
            </list>
          </property>
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/node-insert-next.png"
                  p:altText="Add Proposition"/>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('addparent');
          if (enabled) {
              ajaxCallPropositionTree('togglePropositionSimpleCompound', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Add Parent">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="../krms/images/node-parent-and-child.png"
                  p:altText="Add Parent"/>
          </property>
          <property name="cssClasses">
            <list merge="true">
              <value>kr-addparent-button</value>
            </list>
          </property>
        </bean>

        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('edit');
          if (enabled) {
              ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Edit">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/edit.png"
                  p:altText="Edit Proposition"/>
          </property>
          <property name="cssClasses">
            <list merge="true">
              <value>kr-edit-button</value>
            </list>
          </property>
        </bean>

        <bean parent="Uif-Message" p:messageText="Move: [" p:style="display: inline;"/>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('left');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionLeft', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Left">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-left.png"
                  p:altText="Left"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('right');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionRight', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Right">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-right.png"
                  p:altText="Right"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('up');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionUp', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Up">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-up.png"
                  p:altText="Up"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('down');
          if (enabled) {
              ajaxCallPropositionTree('movePropositionDown', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Down">
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/arrow-down.png"
                  p:altText="Down"/>
          </property>
        </bean>
        <bean parent="Uif-Message" p:messageText="]" p:style="display: inline;"/>

        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('cut');
          if (enabled) {
              ajaxCutPropositionTree('cutProposition', 'RuleEditorView-Tree');
          }
          "
              p:actionLabel="Cut" p:style="margin-left: 15pt;"> <!-- Horiz whitespace -->
          <property name="cssClasses">
            <list merge="true">
              <value>tree-bar-button</value>
              <value>kr-cut-button</value>
            </list>
          </property>
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/cut.png"
                  p:altText="Cut"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('paste');
          if (enabled) {
              disablePasteButton();
              ajaxCallPropositionTree('pasteProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Paste">
          <property name="cssClasses">
            <list merge="true">
              <value>tree-bar-button</value>
              <value>kr-paste-button</value>
            </list>
          </property>
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/paste.png"
                  p:altText="Paste"/>
          </property>
        </bean>
        <bean parent="AgendaEditorView-barButton" p:actionScript="var enabled = enabledCheck('delete');
          if (enabled) {
              ajaxCallPropositionTree('deleteProposition', 'RuleEditorView-TreeGroup');
          }
          "
              p:actionLabel="Delete" p:style="margin-right: 15pt;"> <!-- Horiz whitespace -->
          <property name="cssClasses">
            <list merge="true">
              <value>tree-bar-button</value>
              <value>kr-delete-button</value>
            </list>
          </property>
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/delete.png"
                  p:altText="Delete"/>
          </property>
        </bean>
        <!-- refresh is always allowed, but enabledCheck will disable others if they are not -->
        <bean parent="Uif-PrimaryActionButton" p:methodToCall="refresh" p:actionLabel="refresh" p:preSubmitCall="var enabled = enabledCheck('refresh');
            return true;
            "
                >
          <property name="cssClasses">
            <list merge="true">
              <value>tree-bar-button</value>
              <value>kr-refresh-button</value>
            </list>
          </property>
          <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['application.url']}/krms/images/refresh.png"
                  p:altText="Refresh"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean id="RuleEditorView-Tree-parent" parent="Uif-TreeSection" p:disclosure.render="false" p:header.render="false"
        p:style="float:left; margin-left: 2em;" p:forceSessionPersistence="true">
    <property name="propertyName" value="agendaItemLine.rule.propositionTree"/>
    <property name="validationMessages.displayMessages" value="true"/>
    <property name="validationMessages.displayFieldLabelWithMessages" value="false"/>
    <property name="tree">
      <bean parent="RuleTreeWidget">
        <property name="templateOptions">
          <map>
            <entry key="'plugins'"
                   value="['themes','html_data', 'ui', 'crrm', 'dnd']"/>
            <entry key="'themes'"
                   value="{'theme':'default','dots':'false','icons':'false'}"/>
            <entry key="'ui'" value="{ 'select_limit' : 1 }"/>
            <entry key="'dnd'" value="{ 'drag_target' : false, 'drop_target' : false }"/>
          </map>
        </property>
      </bean>
    </property>
    <property name="nodePrototypeMap">
      <map key-type="java.lang.Class">
        <entry key="#{ T(org.kuali.rice.krms.impl.ui.RuleTreeNode) }">
          <bean parent="RuleTreeNodePrototype"/>
        </entry>
        <entry key="#{ T(org.kuali.rice.krms.impl.ui.SimplePropositionNode) }">
          <bean parent="SimplePropositionNodePrototype"/>
        </entry>
        <entry key="#{ T(org.kuali.rice.krms.impl.ui.SimplePropositionEditNode) }">
          <bean parent="SimplePropositionEditNodePrototype"/>
        </entry>
        <entry key="#{ T(org.kuali.rice.krms.impl.ui.CompoundOpCodeNode) }">
          <bean parent="CompoundOpCodeNodePrototype"/>
        </entry>
        <entry key="#{ T(org.kuali.rice.krms.impl.ui.CompoundPropositionEditNode) }">
          <bean parent="CompoundPropositionEditNodePrototype"/>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="RuleTreeNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="Uif-Message"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="Uif-HorizontalBoxGroup" p:style="float: right;" p:progressiveRender="@{#form.viewTypeName.toString() == 'MAINTENANCE'}">
        <property name="items">
          <list>
            <bean parent="Uif-ActionImage" p:actionScript="ajaxCallPropositionTree('goToEditProposition', 'RuleEditorView-TreeGroup');">
              <property name="actionImage">
                <bean parent="Uif-Image" p:source="../krms/images/edit.png" p:altText="Edit" p:cssClasses="actionReveal"/>
              </property>
            </bean>
            <bean parent="Uif-InputField" p:propertyName="proposition.id" p:showLabel="false" p:maxLength="255">
              <property name="control">
                <bean parent="Uif-HiddenControl" p:cssClasses="hiddenId"/>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="SimplePropositionNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="Uif-Message"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="Uif-HorizontalBoxGroup">
        <property name="items">
          <list>

            <bean parent="Uif-InputField" p:propertyName="proposition.id" p:progressiveRender="@{#form.viewTypeName.toString() == 'MAINTENANCE'}" p:showLabel="false" p:maxLength="255">
              <property name="control">
                <bean parent="Uif-HiddenControl" p:cssClasses="hiddenId" />
              </property>
            </bean>

            <bean parent="Uif-DataField" p:propertyName="proposition.parameterDisplayString"
                  p:showLabel="false" p:cssClasses="parameterDisplayString" p:escapeHtmlInPropertyValue="false">
            </bean>

            <bean parent="selectedNodeQuickActions"/>

          </list>
        </property>
      </bean>
    </property>
  </bean>

  <bean id="SimplePropositionEditNodePrototype" class="org.kuali.rice.krad.uif.container.NodePrototype">
    <property name="labelPrototype">
      <bean parent="Uif-Message"/>
    </property>
    <property name="dataGroupPrototype">
      <bean parent="Uif-VerticalBoxGroup" p:cssClasses="editModeNode">
        <property name="layoutManager.orientation" value="VERTICAL"/>
        <property name="items">
          <list>

            <!-- Hidden ID field -->
            <bean parent="Uif-InputField" p:propertyName="proposition.id" p:showLabel="false" p:maxLength="255">
              <property name="control">
                <bean parent="Uif-HiddenControl" p:cssClasses="hiddenId"/>
              </property>
            </bean>

            <bean parent="Uif-InputField" p:propertyName="proposition.description" p:constraintText="size 100"
                  p:style="margin-left: 1pt;" p:showLabel="false" p:label="Description"
                  p:maxLength="255" p:required="true">
              <property name="control">
                <bean parent="Uif-TextControl" p:size="93" p:maxLength="100"
                      p:watermarkText="Enter a Proposition Description" p:style="margin-left: 12pt;"
                      p:cssClasses="editDescription"/>
              </property>
            </bean>

            <!-- outer div containing the elements of the comparison: term, operator & constant-->
            <bean parent="Uif-HorizontalBoxGroup">
              <property name="items">
                <list>

                  <!-- outer div containing the components of the term: category+term, description+parameter -->
                  <bean parent="Uif-VerticalBoxGroup">
                    <property name="items">
                      <list>

                        <!-- category and term -->
                        <bean parent="Uif-HorizontalFieldGroup">
                          <property name="items">
                            <list>

                              <bean parent="Uif-InputField" p:propertyName="proposition.categoryId"
                                    p:style="margin-left: 12pt" p:showLabel="false" p:label="Category"
                                    p:maxLength="40">
                                <property name="control">
                                  <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"/>
                                </property>
                                <property name="optionsFinder">
                                  <bean class="org.kuali.rice.krms.impl.ui.CategoryValuesFinder"/>
                                </property>
                              </bean>

                              <bean parent="Uif-InputField" p:propertyName="proposition.parameters[0].value"
                                    p:showLabel="false" p:label="Term" p:maxLength="255" p:required="true">
                                <property name="control">
                                  <bean parent="Uif-DropdownControl" p:cssClasses="termSelect"/>
                                </property>
                                <property name="optionsFinder">
                                  <bean class="org.kuali.rice.krms.impl.ui.ValidTermsValuesFinder"/>
                                </property>
                              </bean>

                            </list>
                          </property>
                        </bean>

                        <!-- extra components (progressively rendered) for parameterized terms -->
                        <bean parent="Uif-VerticalBoxGroup" p:headerText="Term Parameters"
                              p:progressiveRender="@{#np.proposition.parameters[0].value != null and #np.proposition.parameters[0].value matches 'parameterized:.*'}"
                              p:style="border: 1px solid #ccc; padding: .5em; margin: .5em; -moz-border-radius: 10px; -webkit-border-radius: 10px;">
                          <!--
                          p:progressiveRender="@{#np.proposition.parameters[0].value matches 'parameterized:.*'}"
                          p:refreshWhenChangedPropertyNames="#np.proposition.parameters[0].value" >
                          -->
                          <property name="items">
                            <list>

                              <bean parent="Uif-InputField" p:propertyName="proposition.newTermDescription"
                                    p:required="true"
                                    p:style="margin-left: 12pt" p:showLabel="false" p:label="Name"
                                    p:maxLength="40">
                                <property name="control">
                                  <bean parent="Uif-TextControl" p:watermarkText="Name of new Term"/>
                                </property>
                              </bean>

                              <bean parent="Uif-VerticalBoxGroup">
                                <property name="items">
                                  <list>
                                    <bean parent="Uif-Message" p:messageText="Parameters:"/>

                                    <!-- Parameters -->
                                    <bean parent="Uif-RemotableFieldsPlaceholderConfig"
                                          p:propertyName="proposition.termParameters"
                                          p:fetchingMethodToCall="retrieveTermParameters" p:cssClasses="uif-labelTop"/>
                                  </list>
                                </property>
                              </bean>

                            </list>
                          </property>
                        </bean>

                      </list>
                    </property>
                  </bean>

                  <!-- operator -->
                  <bean parent="Uif-InputField" p:propertyName="proposition.parameters[2].value"
                        p:showLabel="false"
                        p:style="padding-bottom: 0em;padding-top:null 0em;padding-left: 0em;padding-right: 0em;"
                        p:label="Comparison" p:maxLength="20">
                    <property name="control">
                      <bean parent="Uif-DropdownControl"/>
                    </property>
                    <property name="optionsFinder">
                      <bean class="org.kuali.rice.krms.impl.ui.PropositionOpCodeValuesFinder"/>
                    </property>
                  </bean>

                  <!-- user entered value -->
                  <!-- KULRICE-6728 dont display user entered value if operator is ==null or !=null -->
                  <bean parent="Uif-InputField" p:propertyName="proposition.parameters[1].value"
                        p:showLabel="false" p:label="Value" p:maxLength="255"
                        p:required="@{#np.proposition.parameters[2].value == null or !( #np.proposition.parameters[2].value matches '(?:=null|!=null)' )}"
                        p:progressiveRenderAndRefresh="true"
                        p:refreshWhenChangedPropertyNames="#proposition.parameters[2].value"
                        p:progressiveRender="@{#np.proposition.parameters[2].value == null or !( #np.proposition.parameters[2].value matches '(?:=null|!=null)' )}">
                    <property name="control">
                      <bean parent="Uif-TextControl" p:style="margin-top:null 2px;"
                            p:watermarkText="Enter a Literal Value"/>
                    </property>
                  </bean>

                  <bean parent="selectedNodeQuickActions"/>

                </list>
              </property>
            </bean>
          </list>
        </property>
      </bean>
    </property>
  </bean>

