<!--
https://jira.kuali.org/browse/KULRICE-12691

This update is OPTIONAL.  It updates the <helpDefinitionURL/> to make the document help point to the correct
location, which defaults to the online Rice documentation for that specific version.  Institutions that do not want
to ingest a new document type may instead run the following SQL:

UPDATE KREW_DOC_TYP_T
SET HELP_DEF_URL = 'http://site.kuali.org/rice/${rice.version}/reference/html/Help.html#namespace'
WHERE DOC_TYP_NM = 'NamespaceMaintenanceDocument'
/
-->
<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
  <documentTypes xmlns="ns:workflow/DocumentType" xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">
    <documentType>
      <name>NamespaceMaintenanceDocument</name>
      <parent>RiceDocument</parent>
      <description>Create/edit parameter namespaces</description>
      <label>Namespace</label>
      <postProcessorName>org.kuali.rice.krad.workflow.postprocessor.KualiPostProcessor</postProcessorName>
      <superUserGroupName namespace="KR-WKFLW">WorkflowAdmin</superUserGroupName>
      <blanketApproveGroupName namespace="KR-WKFLW">WorkflowAdmin</blanketApproveGroupName>
      <defaultExceptionGroupName namespace="KR-WKFLW">WorkflowAdmin</defaultExceptionGroupName>
      <docHandler>${kr.url}/maintenance.do?methodToCall=docHandler</docHandler>
      <helpDefinitionURL>http://site.kuali.org/rice/${rice.version}/reference/html/Help.html#namespace</helpDefinitionURL>
      <active>true</active>
      <routingVersion>2</routingVersion>
      <routePaths>
        <routePath>
          <start name="Initiated" />
        </routePath>
      </routePaths>
      <routeNodes>
        <start name="Initiated">
          <activationType>P</activationType>
          <mandatoryRoute>false</mandatoryRoute>
          <finalApproval>false</finalApproval>
        </start>
      </routeNodes>
    </documentType>
  </documentTypes>
</data>

