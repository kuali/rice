<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Image demo -->
  <bean id="Demo-ImageView" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoImage.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.element.Image"/>
    <property name="docBookAnchor" value="d6813e7195"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-Image-Example1"/>
      </list>
    </property>
  </bean>

  <!-- Default -->
  <bean id="Demo-Image-Example1"  parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Image-Example1 start-->
        <bean parent="Uif-Image"
              p:source="@{#ConfigProperties['krad.externalizable.images.url']}computer_programming.jpg"
              p:altText="Computer programming" p:captionHeaderText="Image Caption Text"
              p:cutlineText="Image cutline text here"/>
        <!-- ex:Demo-Image-Example1 end-->
      </list>
    </property>
  </bean>


</beans>