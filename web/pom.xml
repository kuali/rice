                    <includeInProject>false</includeInProject>
                    <source>1.5</source>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                             <goal>compile</goal>
                        </goals>
                    </execution>
                </executions>

                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.mojo.jspc</groupId>
                        <artifactId>jspc-compiler-tomcat6</artifactId>
                        <version>2.0-alpha-3</version>
                    </dependency>
                </dependencies>
            </plugin -->
		</plugins>
	</build>

</project>
