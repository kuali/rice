        <ref bean="testViewMenu"/>
    </property>
    <property name="items">
        <list>
            <bean parent="Page" p:id="page1" p:title="Test Course">
                <property name="items">
                    <list>
                        <ref bean="testValidationSection1"/>
						<ref bean="tabTest"/>
						<ref bean="test2Section4"/>
                    </list>
                </property>
            </bean>
            <bean parent="Page" p:id="page2" p:title="Test Course">
                <property name="items">
                    <list>
                        <ref bean="test2Section6"/>
                    </list>
                </property>
            </bean>
            <bean parent="Page" p:id="page3" p:title="Test Course">
                <property name="items">
                    <list>
                        <ref bean="test2Section4"/>
                    </list>
                </property>
            </bean>
            <bean parent="Page" p:id="page4" p:title="Test Course">
                <property name="items">
                    <list>
                        <ref bean="test2Section3"/>
                    </list>
                </property>
            </bean>
        </list>
    </property>
</bean>

<bean id="testViewMenu" parent="NavigationGroupMenu">
    <property name="items">
        <list>
            <bean parent="HeaderTwo" p:headerText="Navigation"/>
            <bean parent="NavigationActionLinkField" p:navigateToPageId="page1" p:actionLabel="Page 1"/>
            <bean parent="NavigationActionLinkField" p:navigateToPageId="page2" p:actionLabel="Page 2"/>
            <bean parent="NavigationActionLinkField" p:navigateToPageId="page3" p:actionLabel="Page 3"/>
            <bean parent="NavigationActionLinkField" p:navigateToPageId="page4" p:actionLabel="Page 4"/>
