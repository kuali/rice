  <property name="accordion.render" value="false"/>
  <property name="styleClasses" value="group_header"/>  
  <property name="items">
    <list>
      <bean parent="AttributeField_Form" p:label="Field 1" p:propertyName="hField1" p:labelPlacement="TOP" 
      p:labelField.styleClasses="labelTop" p:labelField.renderColon="false" p:required="true">
	  	  	<property name="control">
                    <bean parent="TextControl" p:size="30" p:watermarkText="Field1"/>
            </property>
	  </bean>
      <bean parent="AttributeField_Form" p:label="Field 2" p:propertyName="hField2" p:labelPlacement="TOP" 
      p:labelField.styleClasses="labelTop" p:labelField.renderColon="false" p:required="true">
      	  	<property name="control">
                    <bean parent="TextControl" p:size="30" p:watermarkText="Field2"/>
            </property>
	  </bean>
	  <bean parent="AttributeField_Form" p:label="Field 3" p:propertyName="hField3" p:labelPlacement="TOP" 
      p:labelField.styleClasses="labelTop" p:labelField.renderColon="false" p:required="true">
           	<property name="control">
                    <bean parent="TextControl" p:size="30" p:watermarkText="Field3"/>
            </property>
	  </bean>
    </list>
  </property> 
</bean>

<bean id="testValidationSection4" parent="Group" p:layoutManager.orientation="VERTICAL">
