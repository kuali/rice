<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <!-- Link demo -->
  <bean id="Demo-LinkView" parent="ComponentLibraryView">
    <property name="xmlFilePath" value="/org/kuali/rice/krad/demo/uif/library/DemoLink.xml"/>
    <property name="javaFullClassPath" value="org.kuali.rice.krad.uif.element.Link"/>
    <property name="docBookAnchor" value="linkAndLinkField"/>
    <property name="demoGroups">
      <list>
        <ref bean="Demo-Link-Example1"/>
        <ref bean="Demo-Link-Example2"/>
        <ref bean="Demo-Link-Example3"/>
        <ref bean="Demo-Link-Example4"/>
      </list>
    </property>
  </bean>

  <!-- Default -->
  <bean id="Demo-Link-Example1" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Link-Example1 start-->
        <bean parent="Uif-Link" p:href="http://www.kuali.org"
              p:linkText="Kuali Website"/>
        <!-- ex:Demo-Link-Example1 end-->
      </list>
    </property>
  </bean>

  <!-- Link with custom target -->
  <bean id="Demo-Link-Example2" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Link-Example2 start-->
        <bean parent="Uif-Link" p:href="http://www.kuali.org"
              p:linkText="Kuali Website in a new page"
              p:target="_blank"/>
        <!-- ex:Demo-Link-Example2 end-->
      </list>
    </property>
  </bean>

  <!-- Link in lightbox -->
  <bean id="Demo-Link-Example3" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Link-Example3 start-->
        <bean parent="Uif-Link" p:href="http://www.kuali.org" p:linkText="Kuali Website in a lightbox"
              p:openInDialog="true" p:linkDialogId="Demo-Link-CustomDialog"/>
        <!-- ex:Demo-Link-Example3 end-->
      </list>
    </property>
  </bean>

  <!-- ex:Demo-Link-Example3 start-->

  <!-- Customized iframe dialog with a header and footer change -->
  <bean id="Demo-Link-CustomDialog" parent="Uif-DialogGroup-Iframe">
    <property name="headerText" value="Kuali Website"/>
    <property name="footer.render" value="true"/>
    <property name="footer.items">
      <list>
        <bean parent="Uif-PrimaryActionButton" p:actionLabel="Close"
              p:actionScript="dismissDialog('Demo-Link-CustomDialog');"/>
      </list>
    </property>
  </bean>
  <!-- ex:Demo-Link-Example3 end-->

  <!-- Link with bootstrap icon -->
  <bean id="Demo-Link-Example4" parent="Uif-VerticalBoxSection">
    <property name="items">
      <list>
        <!-- ex:Demo-Link-Example4 start-->
        <bean parent="Uif-Link" p:href="http://www.kuali.org"
              p:linkIconPlacement="ICON_ONLY"
              p:iconClass="icon-pencil"
              p:linkText="Kuali Website in a new page"
              p:target="_blank">
        </bean>
        <!-- ex:Demo-Link-Example4 end-->
      </list>
    </property>
  </bean>

</beans>