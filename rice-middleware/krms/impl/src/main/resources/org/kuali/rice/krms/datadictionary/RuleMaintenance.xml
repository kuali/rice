    <bean id="RuleEditorView-PropositionSummary" parent="Uif-GridSection" p:renderHeader="false" p:style="margin-bottom: 0em;">
      <property name="disclosure.render" value="false" />
      <property name="items">
        <list>
          <bean parent="Uif-InputField" p:propertyName="agendaItemLine.rule.propositionSummary"
            p:colSpan="8">
            <property name="label" value="Proposition Summary" />
            <property name="control">
              <bean parent="Uif-TextAreaControl" p:rows="3" p:cols="150" p:readOnly="true" />
            </property>
          </bean>
        </list>
      </property>

    </bean>
  -->

  <bean id="RuleEditorView-PropositionSummary-parent" parent="Uif-HorizontalBoxGroup" p:renderHeader="false">
    <property name="disclosure.render" value="false"/>
    <property name="items">
      <list>
        <bean parent="Uif-Message" p:messageText="@{#dp.agendaItemLine.rule.propositionSummary}"/>
      </list>
    </property>

  </bean>


  <bean id="RuleEditorView-TreeExpandCollapse" parent="Uif-HorizontalFieldGroup" p:showLabel="false">
    <property name="items">
      <list>
        <bean parent="Uif-ActionLink" p:actionScript="jq('.jstree').jstree('open_all');"
              p:actionLabel="[+] expand all" p:style="margin-left: 2em;">
          <property name="actionImage">
            <null/>
          </property>
        </bean>
        <bean parent="Uif-ActionLink" p:actionScript="jq('.jstree').jstree('close_all');"
              p:actionLabel="[-] collapse all" p:style="margin-right: 15pt;">
          <property name="actionImage">
            <null/>
          </property>
        </bean>
        <bean id="proposition_selected" parent="Uif-InputField" p:propertyName="selectedPropositionId"
              p:showLabel="false">
          <property name="control">
            <bean parent="Uif-HiddenControl"/>
          </property>
        </bean>
        <bean id="proposition_cut" parent="Uif-InputField" p:propertyName="cutPropositionId" p:showLabel="false">
          <property name="control">
