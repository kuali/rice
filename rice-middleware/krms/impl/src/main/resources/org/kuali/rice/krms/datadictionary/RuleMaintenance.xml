<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

  <bean id="RuleMaintenanceDocument" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.krms.impl.repository.RuleBo"/>
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl"/>
    <property name="documentTypeName" value="RuleMaintenanceDocument"/>
    <property name="documentAuthorizerClass"
              value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase"/>
    <property name="lockingKeys">
      <list>
        <value>id</value>
      </list>
    </property>
  </bean>

  <bean id="RuleTreeWidget" parent="Uif-Tree">
    <property name="template" value="/krad/WEB-INF/ftl/components/widget/ruleTree.ftl"/>
    <property name="templateName" value="uif_ruleTree"/>
  </bean>


  <bean id="RuleBo-MaintenanceView" parent="Uif-MaintenanceView">
    <property name="headerText" value="Rule Editor"/>
    <property name="dataObjectClassName" value="org.kuali.rice.krms.impl.repository.RuleBo"/>
    <property name="items">
      <list merge="false">
        <bean parent="ruleEditorBody"/>
      </list>
    </property>
    <property name="additionalScriptFiles">
      <list merge="true">
        <value>/krms/scripts/rulebo-maintenanceview.js"</value>
      </list>
    </property>
  </bean>

  <bean id="ruleEditorBody" parent="ruleEditorBody-parent">
    <property name="componentModifiers">
      <list>
      </list>
    </property>
    <property name="layoutManager">
      <bean parent="Uif-HorizontalBoxLayout"/>
    </property>
  </bean>

  <bean id="ruleEditorBody-parent" parent="Uif-GridSection" p:renderHeader="false">
    <property name="headerText" value="Rule Editor"/>
    <property name="layoutManager">
      <bean parent="Uif-GridLayoutBase" p:numberOfColumns="3"/>
    </property>
    <property name="items">
      <list>
        <bean parent="ruleInfoSection"/>
        <bean parent="ruleActionsSection"/>
      </list>
    </property>
  </bean>

  <bean id="ruleInfoSection" parent="ruleInfoSection-parent"/>
  <bean id="ruleInfoSection-parent" parent="Uif-Disclosure-VerticalBoxSection">
    <property name="headerText" value="Rule"/>
    <property name="renderHeader" value="true"/>
    <property name="disclosure.render" value="true"/>
    <property name="disclosure.defaultOpen" value="true"/>
    <property name="items">
      <list>
        <bean parent="ruleInfoGrid"/>
        <!--
        <bean parent="ruleAttributesSection"/>
        -->
        <bean id="propositionSection" parent="propositionSection-parent"/>
      </list>
    </property>
  </bean>

  <bean id="ruleInfoGrid" parent="Uif-GridSection">
    <property name="headerText" value="Rule Information"/>
    <property name="renderHeader" value="false"/>
    <property name="disclosure.render" value="false"/>
    <property name="items">
      <list>

        <bean parent="Uif-HorizontalFieldGroup" p:label="Copy from Existing Rule"
              p:progressiveRenderViaAJAX="true"
              p:progressiveRender="@{#dp.addRuleInProgress == true}">
          <property name="items">
            <list>
              <bean parent="Uif-InputField" p:id="copyRuleName" p:propertyName="copyRuleName"
                    p:style="font-size: smaller;" p:showLabel="false">
                <property name="label" value="Copy from Existing Rule"/>
                <property name="quickfinder">
                  <bean parent="Uif-QuickFinder" p:dataObjectClassName="org.kuali.rice.krms.impl.repository.RuleBo">
                    <property name="fieldConversions">
                      <map>
                        <entry key="id" value="agendaItemLine.rule.id"/>
                        <entry key="name" value="copyRuleName"/>
                        <entry key="namespace" value="agendaItemLine.rule.namespace"/>
                      </map>
                    </property>
                    <property name="lookupParameters">
                      <map>
                        <entry key="copyRuleName" value="name"/>
                        <entry key="agendaItemLine.rule.namespace" value="namespace"/>
                      </map>
                    </property>
                  </bean>
                </property>
                <property name="control">
                  <bean parent="Uif-TextControl" p:size="40" p:maxLength="100"
                        p:watermarkText="Existing Rule Name"/>
                </property>
              </bean>
              <bean parent="Uif-PrimaryActionButton" p:id="copyRuleButton" p:methodToCall="copyRule"
                    p:actionLabel="Copy Rule"
                    p:cssClasses="buttonClasses" p:style="margin-right: 15pt; float: right;"
                    p:refreshWhenChangedPropertyNames="#dp.copyRuleName" p:disabled="@{#empty(#dp.copyRuleName)}"
                    p:onDocumentReadyScript="rulebo_maintenanceview.bind_copyRuleName();"/>
              <!-- disable button when field is empty -->
            </list>
          </property>
        </bean>
        <bean parent="Uif-InputField" p:id="ruleNamespace" p:propertyName="agendaItemLine.rule.namespace"
              p:label="Namespace" p:readOnly="true"/>
        <bean parent="ruleCustomAttributes"/>
        <bean parent="Uif-InputField" p:propertyName="agendaItemLine.rule.name" p:label="Name" p:required="true"
              p:constraintText="size 100">
          <property name="control">
            <bean parent="Uif-TextControl" p:size="40" p:maxLength="100" p:watermarkText="Enter a Rule Name"
                  p:cssClasses="countdown"/>
          </property>
        </bean>
        <bean parent="Uif-InputField" p:propertyName="agendaItemLine.rule.description" p:label="Description"
              p:labelColSpan="1" p:constraintText="size 4000" p:colSpan="1">
          <property name="control">
            <bean parent="Uif-TextAreaControl" p:rows="2" p:cols="60" p:textExpand="true" p:maxLength="4000"
                  p:watermarkText="Enter a Rule Description" p:cssClasses="countdown"/>
          </property>
        </bean>
        <bean parent="Uif-InputField" p:propertyName="agendaItemLine.rule.active" p:label="Active">
          <property name="control">
            <bean parent="Uif-CheckboxControl"/>
          </property>
        </bean>
      </list>
    </property>
  </bean>

  <bean name="ruleCustomAttributes" parent="Uif-GridSection" p:colSpan="2" p:layoutManager.numberOfColumns="2"
        p:refreshWhenChangedPropertyNames="document.newMaintainableObject.dataObject.agendaItemLine.rule.typeId"
        p:style="padding: 0px; border-style: hidden;">
    <property name="items">
      <list>
        <bean parent="Uif-InputField" p:propertyName="agendaItemLine.rule.typeId" p:label="Type" p:required="false">
          <property name="control">
            <bean parent="Uif-DropdownControl"/>
          </property>
          <property name="optionsFinder">
            <bean class="org.kuali.rice.krms.impl.repository.RuleTypeValuesFinder"/>
          </property>
        </bean>
        <bean parent="Uif-RemotableFieldsPlaceholderConfig" p:propertyName="customRuleAttributesMap"
              p:fetchingMethodToCall="retrieveRuleCustomAttributes"/>
      </list>
    </property>
  </bean>

  <bean name="propositionSection-parent" parent="Uif-VerticalBoxGroup">
    <property name="headerText" value="Proposition Tree"/>

    <property name="items">
      <list>

        <bean parent="Uif-VerticalBoxGroup"
              p:style="border: 1px solid #999999; padding: 5px; margin: 5px; background: white; margin-top:null ">
          <property name="items">
            <list>
              <bean parent="Uif-GridGroup" p:style="margin-bottom: 5pt; margin-top:null 0em;"
                    p:progressiveRender="@{#form.viewTypeName.toString() != 'MAINTENANCE'}">
                <property name="items">
                  <list>
                    <bean parent="RuleEditorView-RuleTreeViewControls"/>
                  </list>
                </property>
              </bean>
              <bean parent="Uif-GridGroup" p:style="margin-bottom: 5pt; margin-top:null 0em;"
                    p:progressiveRender="@{#form.viewTypeName.toString() == 'MAINTENANCE'}">
                <property name="items">
                  <list>
                    <bean parent="RuleEditorView-RuleTreeEditControls"/>
                  </list>
                </property>
              </bean>
              <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
              <!-- also, the bogus refreshWhenChanged is important because it puts a RuleEditorView-TreeGroup_refreshWrapper around the group that
                   is needed for the javascript hack that is refreshing -->
              <bean id="RuleEditorView-TreeGroup" parent="Uif-VerticalBoxGroup"
                    p:style="margin-bottom: 5pt; margin-top:null 0em;"
                    p:refreshWhenChangedPropertyNames="this.is.a.hack">
                <property name="layoutManager.orientation" value="VERTICAL"/>
                <property name="items">
                  <list>
                    <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                    <bean id="RuleEditorView-PropositionSummary" parent="RuleEditorView-PropositionSummary-parent"
                          p:forceSessionPersistence="true"/>
                    <bean parent="RuleEditorView-TreeExpandCollapse"/>
                    <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
                    <bean id="RuleEditorView-Tree" parent="RuleEditorView-Tree-parent"
                          p:forceSessionPersistence="true"/>
                  </list>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
  </bean>

